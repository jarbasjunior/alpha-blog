<h1 align="center">Usuários Alpha Blog</h1>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "Artigo") if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
            <li><%= link_to "Excluir usuário", user_path(user), class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Deseja realmente excluir o usuário \"#{user.username}\"?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>
<div align="center">
  <%= will_paginate %>
</div>
